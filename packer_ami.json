{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-73208813",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "packer-api {{timestamp}}",
      "tags": {
        "Role": "api",
        "Environment": "photos-delta"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 10",
        "sudo apt-get update",
        "sudo apt-get upgrade -y",
        "sudo apt-get install -y redis-server nginx php"
      ]
    }
  ]
}

