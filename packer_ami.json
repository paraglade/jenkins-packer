{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "",
    "source_ami": "",
    "instance_type": "m3.medium",
    "ami_name": "api.photos {{timestamp}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ami_name": "{{user `ami_name`}}",
      "ssh_username": "ubuntu",
      "tags": {
        "Role": "api",
        "Environment": "photos-delta",
        "build_time": "{{isotime}}",
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "sudo -S sh '{{.Path}}'",
      "scripts": [
          "scripts/provision.sh",
          "scripts/audit.sh",
          "scripts/clean.sh"
      ]
    }
  ]
}
